# BMAD Framework Configuration
# Copy this file to .env and fill in your values

# Anthropic API Key (REQUIRED for BMAD agent execution)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude Model Configuration (optional, defaults shown)
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Cloud Provider API Keys (optional, only needed for cloud-specific tools)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

GOOGLE_APPLICATION_CREDENTIALS=path/to/gcp/credentials.json
GOOGLE_CLOUD_PROJECT=your_gcp_project_id

# Output preferences (optional)
DEFAULT_OUTPUT_FORMAT=markdown
DIAGRAM_OUTPUT_DIR=./output/diagrams
REPORT_OUTPUT_DIR=./output/reports
